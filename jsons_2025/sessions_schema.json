{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Sessions Schema",
    "type": "object",
    "properties": {
        "sessions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "speakers": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "designation": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "name",
                                "designation"
                            ]
                        }
                    },
                    "about": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string"
                    }
                },
                "required": [
                    "title",
                    "type",
                    "speakers",
                    "about",
                    "url"
                ]
            }
        }
    },
    "required": [
        "sessions"
    ]
}