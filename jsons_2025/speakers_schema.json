{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Speakers Schema",
    "type": "object",
    "properties": {
        "speakers": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "designation": {
                        "type": "string"
                    },
                    "company": {
                        "type": "string"
                    },
                    "bio": {
                        "type": "string"
                    },
                    "linkedin": {
                        "type": "string"
                    },
                    "sessions": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string"
                                },
                                "title": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "type",
                                "title"
                            ]
                        }
                    },
                    "profile_url": {
                        "type": "string"
                    },
                    "slug": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "designation",
                    "company",
                    "bio",
                    "linkedin",
                    "sessions",
                    "profile_url",
                    "slug"
                ]
            }
        }
    },
    "required": [
        "speakers"
    ]
}